---
import CardLaunch from "./../components/CardLaunch.astro"
import { type APISpaceXResponse } from "../types/api"

// podemos ejecutar javascript aqui 
const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json'
    },
    body: JSON.stringify({
        query: {},
        options: {
            sort: {
                date_unix: 'asc'
            }, 
            limit: 12,
        }
    })
})
const { docs: launches } = await res.json() as APISpaceXResponse
---

<div class="grid gap-8 sm:grid-cols-2 lg-grid-cols-3">
    {
        launches.map(({ id, date_utc, name, links, details, flight_number, success}) => (
            <CardLaunch
                id={id}
                name={name}
                date={date_utc}
                img={links.patch.small}
                details={details}
                flightNumber={flight_number}
                success={success}
            />
        ))
    }
</div>
